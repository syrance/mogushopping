
page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-wrapper {
  width: 212rpx;
  height: 212rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10rpx 30rpx rgba(0, 0, 0, 0.07);
  border-radius: 42rpx;
  margin-top: 181rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-wrapper image {
  width: 129rpx;
  height: 136rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 800;
  line-height: 66rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 64rpx;
}

.desc {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(168, 168, 168, 1);
  margin-top: 10rpx;
  position: relative;
}

.desc::before {
  position: absolute;
  content: '';
  width: 45rpx;
  height: 2rpx;
  background-color: rgba(229, 229, 229, 1);
  top: 16rpx;
  left: -59rpx;
}

.desc::after {
  position: absolute;
  content: '';
  width: 45rpx;
  height: 2rpx;
  background-color: rgba(229, 229, 229, 1);
  top: 16rpx;
  right: -59rpx;
}

.wx-login-btn {
  margin-top: 313rpx;
  width: 568rpx;
  height: 99rpx;
  background: linear-gradient(225deg, rgba(255, 209, 123, 1) 0%, rgba(255, 139, 65, 1) 100%);
  box-shadow: 0px 10rpx 30rpx rgba(254, 160, 53, 0.47);
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wx-login-btn:not([size='mini']) {
  width: 568rpx;
}

.wx-login-btn image {
  width: 66rpx;
  height: 66rpx;
}

.phone-login-link {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 42rpx;
  color: rgba(51, 51, 51, 1);
  margin-top: 68rpx;
}

.cr-txt {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(168, 168, 168, 1);
  margin-top:60rpx;
}


